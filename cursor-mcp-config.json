{
  "mcpServers": {
    "Playwright_MCP": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "3AmigosMCP",
        "npx",
        "@playwright/mcp@latest",
        "--port",
        "8080",
        "--host",
        "0.0.0.0",
        "--headless",
        "--isolated"
      ],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "/home/playwright/.cache/ms-playwright"
      }
    },
    "Filesystem_MCP": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "3AmigosMCP",
        "npx",
        "@modelcontextprotocol/server-filesystem",
        "--root-dir",
        "/home/playwright/workspace"
      ]
    },
    "Database_MCP": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "3AmigosMCP",
        "npx",
        "@modelcontextprotocol/server-sqlite",
        "--database",
        "/home/playwright/data/data.db"
      ]
    }
  }
}
